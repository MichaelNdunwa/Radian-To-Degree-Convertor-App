<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".converters.DegreeToRadian">

    <EditText
        android:id="@+id/degree_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter the degree value"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="128dp"/>

    <Button
        android:id="@+id/convert_to_radian_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/degree_edit_text"
        app:layout_constraintStart_toStartOf="@+id/degree_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/degree_edit_text"/>

    <TextView
        android:id="@+id/display_in_radian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/convert_to_radian_button"
        app:layout_constraintStart_toStartOf="@+id/convert_to_radian_button"
        app:layout_constraintEnd_toEndOf="@id/convert_to_radian_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>