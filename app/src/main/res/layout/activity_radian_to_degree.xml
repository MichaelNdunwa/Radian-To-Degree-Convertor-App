<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".converters.RadianToDegree">

    <EditText
        android:id="@+id/radian_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter the radian value"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="128dp"/>

    <Button
        android:id="@+id/convert_to_degree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/radian_edit_text"
        app:layout_constraintStart_toStartOf="@+id/radian_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/radian_edit_text"/>

    <TextView
        android:id="@+id/display_radian_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/convert_to_degree_button"
        app:layout_constraintStart_toStartOf="@+id/convert_to_degree_button"
        app:layout_constraintEnd_toEndOf="@id/convert_to_degree_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>